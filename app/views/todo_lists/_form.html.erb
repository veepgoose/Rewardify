<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_list.errors.count, "error") %> Nah mate, it's fucked. Try again.</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :wish, style: "display: block"%>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :Details, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <% if todo_list.new_record? %>
      <%= form.submit "Create Wish" %>
    <% else %>
      <%= form.submit "Update Wish" %>
    <% end %>
  </div>
<% end %>
